<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mingle.widget.MainActivity">



    <LinearLayout

        android:layout_centerInParent="true"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/thumbTextView"
            android:onClick="onClick"
            android:layout_width="fill_parent"
            android:text="ThumbTextView 控件"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/animationRL"
            android:onClick="onClick"
            android:layout_width="fill_parent"
            android:text="AnimationRelativeLayout 控件"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/carryFragment"
            android:onClick="onClick"
            android:layout_width="fill_parent"
            android:text="CarryFragmentLayout  控件"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
